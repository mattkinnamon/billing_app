<%= form_for @company do |f| %>

<%= f.label :companies_name, 'Company Name' %><br>
<%= f.text_field :companies_name %><br>
<br>
<%= f.label :companies_domain, 'Domain' %><br>
<%= f.text_field :companies_domain %><br>
<br>
<p><strong>Contact Person:</strong></p>
<%= f.label :companies_contact_name, 'Contact Name' %><br>
<%= f.text_field :companies_contact_name %><br>
<br>
<%= f.label :companies_contact_phone, 'Contact Phone' %><br>
<%= f.text_field :companies_contact_phone %><br>
<br>
<%= f.label :companies_contact_email, 'Contact Email' %><br>
<%= f.text_field :companies_contact_email %><br>
<br>
<p><strong>Report Recipients:</strong></p>
<%= f.label :companies_report_email1, 'Email 1' %><br>
<%= f.text_field :companies_report_email1 %><br>
<br>
<%= f.label :companies_report_email2, 'Email 2' %><br>
<%= f.text_field :companies_report_email2 %><br>
<br>
<%= f.label :companies_report_email3, 'Email 3' %><br>
<%= f.text_field :companies_report_email3 %><br>
<br>
<p><strong>Address:</strong></p>
<%= f.label :companies_street_address, 'Street Address' %><br>
<%= f.text_field :companies_street_address %><br>
<br>
<%= f.label :companies_city %><br>
<%= f.text_field :companies_city %><br>
<br>
<%= f.label :companies_state %><br>
<%= f.text_field :companies_state %><br>
<br>
<%= f.label :companies_zip %><br>
<%= f.text_field :companies_zip %><br>
<br>
<p><strong>Billing Details:</strong></p>
<%= f.label :companies_taxable %><br>
<%= f.select :companies_taxable, [['Yes', true], ['No', false]] %><br>
<br>
<%= f.label :companies_billing_rate, 'Billing Rate' %><br>
<%= f.select :companies_billing_rate, [['Standard', 'standard'], ['Custom', 'custom']] %><br>
<br>
<%= f.label :companies_terms %><br>
<%= f.select :companies_terms, [['Net 30', 30], ['Net 60', 60], ['Net 90', 90]] %><br>
<br>
<%= f.label :companies_purchase_order %><br>
<%= f.text_field :companies_purchase_order %><br>
<br>

<%= f.submit %>
<% end %>